<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_register"
    android:background="@drawable/ant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="150dp"
    tools:context="com.example.sportsnews.activity.RegisterActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <EditText
            android:id="@+id/register_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="请输入用户名"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/textview_round_border"
            android:layout_marginRight="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >

        <EditText
            android:id="@+id/register_mail"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="请输入e-mail地址"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/textview_round_border"
            android:layout_marginRight="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >


        <EditText
            android:id="@+id/register_password"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:hint="请输入密码"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/textview_round_border"
            android:layout_marginRight="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >


        <EditText
            android:id="@+id/register_password2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/textview_round_border"
            android:layout_marginRight="0dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        android:text="注   册"
        android:backgroundTint="@color/red"
        android:background="@drawable/textview_round_border"
        />

</LinearLayout>
